<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="TextBlockBase">
        <Setter Property="Foreground" Value="#0A0A0A"></Setter>
    </Style>
    
    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
    </Style>
    
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="#0A0A0A"></Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="DayHeader" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="FontSize" Value="56" />
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="LineHeight" Value="56"></Setter>
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="DaySubheader" BasedOn="{StaticResource DayHeader}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="20"></Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="ProjectName" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="FontWeight" Value="DemiBold"></Setter>
    </Style>
</ResourceDictionary>